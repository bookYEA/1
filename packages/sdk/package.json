{
  "name": "@suiet/wallet-sdk",
  "version": "0.2.13",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "tsc --emitDeclarationOnly && vite build",
    "test": "jest --reporters jest-simple-dot-reporter --collectCoverage=false",
    "test:watch": "jest --reporters jest-simple-dot-reporter --collectCoverage=false --watch",
    "test:coverage": "jest --detectOpenHandles --runInBand --logHeapUsage --verbose --no-cache --bail --watchAll=false --ci --reporters=default",
    "clean": "rimraf dist/"
  },
  "module": "dist/index.js",
  "main": "dist/index.umd.cjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "dependencies": {
    "@mysten/sui.js": "0.36.0",
    "@mysten/wallet-standard": "0.5.12",
    "@noble/hashes": "^1.3.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/jest": "^28.1.7",
    "@types/node": "^18.15.11",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "jest-simple-dot-reporter": "^1.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "vite": "^3.1.0",
    "vite-plugin-dts": "^2.3.0"
  },
  "peerDependencies": {
    "@mysten/sui.js": "0.36.0",
    "@mysten/wallet-standard": "0.5.12"
  }
}
